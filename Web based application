<!DOCTYPE html>
<html>
<head>
    <title>Classroom Seating Arrangement</title>
    <style>
        body { font-family: Arial; }
        .classroom { 
            display: grid;
            grid-template-columns: repeat(5, 60px);
            gap: 10px;
            margin: 20px;
        }
        .seat {
            width: 60px;
            height: 60px;
            background: #ddd;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: move;
            border-radius: 4px;
        }
        .student-list {
            margin: 20px;
            padding: 10px;
            border: 1px solid #ccc;
        }
        .student {
            padding: 8px;
            margin: 5px;
            background: #f0f0f0;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Classroom Seating Arrangement</h1>
    
    <div class="student-list" id="studentList">
        <h3>Students</h3>
        <div class="student" draggable="true">Alex</div>
        <div class="student" draggable="true">Jamie</div>
        <div class="student" draggable="true">Taylor</div>
        <div class="student" draggable="true">Morgan</div>
    </div>
    
    <h3>Classroom Layout</h3>
    <div class="classroom" id="classroom">
        <!-- Seats will be generated by JavaScript -->
    </div>

    <button onclick="saveArrangement()">Save Arrangement</button>

    <script>
        // Create seats
        const classroom = document.getElementById('classroom');
        for (let i = 0; i < 20; i++) {
            const seat = document.createElement('div');
            seat.className = 'seat';
            seat.id = 'seat-' + i;
            seat.addEventListener('dragover', allowDrop);
            seat.addEventListener('drop', drop);
            classroom.appendChild(seat);
        }

        // Make students draggable
        document.querySelectorAll('.student').forEach(student => {
            student.addEventListener('dragstart', drag);
        });

        function allowDrop(e) {
            e.preventDefault();
        }

        function drag(e) {
            e.dataTransfer.setData('text', e.target.textContent);
        }

        function drop(e) {
            e.preventDefault();
            const studentName = e.dataTransfer.getData('text');
            e.target.textContent = studentName;
        }

        function saveArrangement() {
            alert('Arrangement saved! (In a real app, this would save to storage)');
        }
    </script>
</body>
</html>
